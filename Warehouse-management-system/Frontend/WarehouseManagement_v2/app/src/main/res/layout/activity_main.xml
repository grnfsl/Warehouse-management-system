<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/userT"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="148dp"
        android:text="User"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/passT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:text="Password"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/passwordEditID"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/userEditID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passwordEditID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/userEditID"
        app:layout_constraintTop_toBottomOf="@+id/userEditID" />

    <Button
        android:id="@+id/loginID"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="72dp"
        android:background="@android:color/holo_blue_light"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="13sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="@+id/passwordEditID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/passwordEditID"
        app:layout_constraintTop_toTopOf="@+id/passT" />

    <Button
        android:id="@+id/refresh"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="140dp"
        android:background="@android:color/holo_blue_light"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="13sp"
        android:textStyle="normal|bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/passwordEditID"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/passwordEditID"
        app:layout_constraintTop_toTopOf="@+id/passT" />

    <Button
        android:id="@+id/disconnect_button"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@android:color/holo_blue_light"
        android:text="Disconnect"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="13sp"
        android:textStyle="normal|bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/passwordEditID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/passwordEditID"
        app:layout_constraintTop_toTopOf="@+id/passT" />

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="204dp"
        android:background="@android:color/holo_blue_light"
        android:text="Sign out"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="13sp"
        android:textStyle="normal|bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/passwordEditID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/passwordEditID"
        app:layout_constraintTop_toTopOf="@+id/passT" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/loginID"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/loginID"
        app:layout_constraintTop_toBottomOf="@+id/loginID" />

</android.support.constraint.ConstraintLayout>